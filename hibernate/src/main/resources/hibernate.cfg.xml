<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>

    <property name="connection.url">jdbc:mysql://localhost:3306/swiggy</property>
    <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="connection.username">root</property>
    <property name="connection.password">Machine@123</property>

    <!-- DB schema will be updated if needed -->
     <property name="hibernate.hbm2ddl.auto">update</property>

    <property name="show_sql">true</property>

    <!-- Mappings -->
    <mapping class="com.learning.entity.Dish"/>
    <mapping class="com.learning.entity.User"/>
    <mapping class="com.learning.entity.Orders"/>
    <mapping class="com.learning.entity.Restaurant"/>
    <mapping class="com.learning.entity.City"/>
    <mapping class="com.learning.entity.Location"/>

  </session-factory>
</hibernate-configuration>